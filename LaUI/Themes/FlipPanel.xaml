<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:control="clr-namespace:LaUI.Controls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/LaUI;component/Styles/Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="Style.ArrowToggleButton" TargetType="{x:Type ToggleButton}">
        <Setter Property="Background" Value="{DynamicResource TransparentWhiteBrush}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="BorderBrush" Value="{x:Null}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ToggleButton}">
                    <Border x:Name="border" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            Background="{TemplateBinding Background}" 
                            SnapsToDevicePixels="true">
                        <Path x:Name="ArrowPath" 
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center" 
                              Stretch="Uniform"
                              Fill="{TemplateBinding Foreground}" 
                              Data="M5.59,7.41L7,6L13,12L7,18L5.59,16.59L10.17,12L5.59,7.41M11.59,7.41L13,6L19,12L13,18L11.59,16.59L16.17,12L11.59,7.41Z"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Style.FlipPanelHasHeaders" TargetType="{x:Type control:FlipPanel}">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BlackBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:FlipPanel}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="SetArrowColor"/>
                        <Storyboard x:Key="ScaleArrow">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" 
                                                           Storyboard.TargetName="PART_FlipButton">
                                <EasingDoubleKeyFrame KeyTime="0:0:0" 
                                                      Value="0.8">
                                    <EasingDoubleKeyFrame.EasingFunction>
                                        <QuadraticEase EasingMode="EaseIn"/>
                                    </EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" 
                                                               Storyboard.TargetName="PART_FlipButton">
                                <EasingDoubleKeyFrame KeyTime="0:0:00" 
                                                      Value="0.8">
                                    <EasingDoubleKeyFrame.EasingFunction>
                                        <QuarticEase EasingMode="EaseIn"/>
                                    </EasingDoubleKeyFrame.EasingFunction>
                                </EasingDoubleKeyFrame>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Border BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Effect="{TemplateBinding Effect}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ViewStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition From="Flipped" 
                                                      GeneratedDuration="0:0:0.3" 
                                                      To="Normal">
                                        <VisualTransition.GeneratedEasingFunction>
                                            <SineEase EasingMode="EaseIn"/>
                                        </VisualTransition.GeneratedEasingFunction>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" 
                                                             To="0" 
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                 Storyboard.TargetName="BackContent">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Duration="0"
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                             Storyboard.TargetName="FrontContent">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Duration="0:0:0.3" 
                                                             To="0" 
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                                             Storyboard.TargetName="PART_FlipButton">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseIn"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualTransition>
                                    <VisualTransition From="Normal" 
                                                      GeneratedDuration="0:0:0.3" 
                                                      To="Flipped">
                                        <VisualTransition.GeneratedEasingFunction>
                                            <SineEase EasingMode="EaseOut"/>
                                        </VisualTransition.GeneratedEasingFunction>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.3" 
                                                             From="0" 
                                                             To="180" 
                                                             Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" 
                                                             Storyboard.TargetName="PART_FlipButton"/>
                                            <DoubleAnimation Duration="0" From="0" 
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                             Storyboard.TargetName="BackContent" 
                                                             To="1"/>
                                            <DoubleAnimation Duration="0" 
                                                                 To="0" 
                                                                 Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                 Storyboard.TargetName="FrontContent">
                                                <DoubleAnimation.EasingFunction>
                                                    <SineEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Flipped">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" 
                                                               Storyboard.TargetName="PART_FlipButton">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="180"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                       Storyboard.TargetName="FrontContent">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" 
                                                               Storyboard.TargetName="PART_FlipButton">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                       Storyboard.TargetName="BackContent">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--Header content-->
                            <ContentPresenter HorizontalAlignment ="{TemplateBinding HorizontalHeaderAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}" 
                                              Grid.ColumnSpan="2"
                                              Content="{TemplateBinding Header}"/>

                            <!--Back content-->
                            <ContentPresenter x:Name="BackContent" 
                                              Margin="{TemplateBinding Padding}" 
                                            Content="{TemplateBinding BackContent}" 
                                              Grid.Row="1" 
                                              Grid.ColumnSpan="2"/>
                            <!--Front content-->
                            <ContentPresenter x:Name="FrontContent" 
                                              Margin="{TemplateBinding Padding}" 
                                              Content="{TemplateBinding FrontContent}" 
                                              Grid.Row="1" 
                                              Grid.ColumnSpan="2"/>

                            <!-- FlipHeader -->
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalFlipHeaderAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalFlipHeaderAlignment}"
                                              Margin="3,0,3,3"
                                              Content="{TemplateBinding FlipHeader}" 
                                              Grid.Row="2" 
                                              Grid.Column="0"/>

                            <ToggleButton x:Name="PART_FlipButton" 
                                          Grid.Row="2" 
                                          Margin="3,0,3,3"
                                          Style="{StaticResource Style.ArrowToggleButton}" 
                                          Foreground="{DynamicResource AccentBaseColorBrush}"
                                          RenderTransformOrigin="0.5,0.5" 
                                          HorizontalAlignment="Center"
                                          Grid.Column="1" >
                                <ToggleButton.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ToggleButton.RenderTransform>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed"
                                 Value="True" 
                                 SourceName="PART_FlipButton">
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="ScaleArrow_BeginStoryboard"/>
                            </Trigger.ExitActions>
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="ScaleArrow_BeginStoryboard" 
                                                 Storyboard="{StaticResource ScaleArrow}"/>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger Property="IsMouseOver"
                                 Value="True" 
                                 SourceName="PART_FlipButton">
                            <!--<Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="SetArrowColor_BeginStoryboard"/>
                            </Trigger.ExitActions>
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="SetArrowColor_BeginStoryboard" 
                                                     Storyboard="{StaticResource SetArrowColor}"/>
                            </Trigger.EnterActions>-->
                            <Setter Property="Foreground" 
                                    TargetName="PART_FlipButton" 
                                    Value="{DynamicResource HighlightBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Style.TransitionFlipPanel" 
           TargetType="{x:Type control:FlipPanel}">
        <Setter Property="IsTabStop" Value="False"/>
        <Setter Property="Background" Value="{DynamicResource WhiteBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BlackBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type control:FlipPanel}">
                    <ControlTemplate.Resources>
                        <Storyboard x:Key="ScaleFlipButton">
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" 
                                                           Storyboard.TargetName="PART_FlipButton">
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.8"/>
                            </DoubleAnimationUsingKeyFrames>
                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" 
                                                           Storyboard.TargetName="PART_FlipButton">
                                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.8"/>
                            </DoubleAnimationUsingKeyFrames>
                        </Storyboard>
                    </ControlTemplate.Resources>
                    <Border x:Name="bd" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{DynamicResource AccentBaseColorBrush}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Effect="{TemplateBinding Effect}">
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="ViewStates">
                                <VisualStateGroup.Transitions>
                                    <VisualTransition From="Flipped" 
                                                      GeneratedDuration="0:0:0.3" 
                                                      To="Normal">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.3" 
                                                             To="1" 
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                             Storyboard.TargetName="FrontContent"/>
                                            <DoubleAnimation Duration="0:0:0.3" 
                                                             To="0" 
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                             Storyboard.TargetName="BackContent"/>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" 
                                                                           Storyboard.TargetName="PART_FlipButton">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualTransition>
                                    <VisualTransition From="Normal" 
                                                      GeneratedDuration="0:0:0.3" 
                                                      To="Flipped">
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.3" 
                                                             To="1" 
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                             Storyboard.TargetName="BackContent"/>
                                            <DoubleAnimation Duration="0:0:0.3" 
                                                             To="0" 
                                                             Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                             Storyboard.TargetName="FrontContent"/>
                                            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" 
                                                                           Storyboard.TargetName="PART_FlipButton">
                                                <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="180"/>
                                            </DoubleAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualTransition>
                                </VisualStateGroup.Transitions>
                                <VisualState x:Name="Normal">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                       Storyboard.TargetName="BackContent">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                       Storyboard.TargetName="FrontContent">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)"
                                                                       Storyboard.TargetName="PART_FlipButton">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Flipped">
                                    <Storyboard>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                       Storyboard.TargetName="FrontContent">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" 
                                                                       Storyboard.TargetName="BackContent">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" 
                                                                       Storyboard.TargetName="PART_FlipButton">
                                            <EasingDoubleKeyFrame KeyTime="0" Value="180"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="{TemplateBinding CornerRadius}"/>
                            <Border Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Background="{TemplateBinding Background}"/>

                            <!--Header content-->
                            <ContentPresenter HorizontalAlignment ="{TemplateBinding HorizontalHeaderAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalHeaderAlignment}" 
                                              Grid.ColumnSpan="2"
                                              Content="{TemplateBinding Header}"/>

                            <!--Back content-->
                            <ContentPresenter x:Name="BackContent" 
                                              Margin="{TemplateBinding Padding}" 
                                            Content="{TemplateBinding BackContent}" 
                                              Grid.Row="1" 
                                              Grid.ColumnSpan="2"/>
                            <!--Front content-->
                            <ContentPresenter x:Name="FrontContent" 
                                              Margin="{TemplateBinding Padding}" 
                                              Content="{TemplateBinding FrontContent}" 
                                              Grid.Row="1" 
                                              Grid.ColumnSpan="2"/>

                            <!-- Flip Header -->
                            <ContentControl Grid.Row="2" 
                                            Grid.Column="0"  
                                            Margin="3 3 3 3"
                                            HorizontalAlignment="{TemplateBinding HorizontalFlipHeaderAlignment}" 
                                            VerticalAlignment="{TemplateBinding VerticalFlipHeaderAlignment}"
                                            Foreground="{StaticResource WhiteBrush}"
                                            Content="{TemplateBinding FlipHeader}"/>

                            <ToggleButton x:Name="PART_FlipButton"
                                          Grid.Row="2" 
                                          Grid.Column="1"
                                          Background="Transparent"
                                          Margin="3 0 3 3"
                                          Style="{StaticResource Style.ArrowToggleButton}" 
                                          Foreground="{StaticResource WhiteBrush}"
                                          RenderTransformOrigin="0.5,0.5">
                                <ToggleButton.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ToggleButton.RenderTransform>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" SourceName="PART_FlipButton" Value="True">
                            <Trigger.ExitActions>
                                <StopStoryboard BeginStoryboardName="ScaleFlipButton_BeginStoryboard"/>
                            </Trigger.ExitActions>
                            <Trigger.EnterActions>
                                <BeginStoryboard x:Name="ScaleFlipButton_BeginStoryboard" 
                                                 Storyboard="{StaticResource ScaleFlipButton}"/>
                            </Trigger.EnterActions>
                        </Trigger>
                        <Trigger x:Name="trigger" Property="IsMouseOver" 
                                 Value="True" 
                                 SourceName="PART_FlipButton">
                            <Setter Property="Foreground" 
                                    TargetName="PART_FlipButton" 
                                    Value="{StaticResource BlackBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="Style.AccentFlipPanel"
           BasedOn="{StaticResource Style.TransitionFlipPanel}"
           TargetType="control:FlipPanel">
        <Setter Property="BorderBrush" Value="{DynamicResource AccentBaseColorBrush}"/>
    </Style>

    <!-- default flip panel style-->
    <Style BasedOn="{StaticResource Style.TransitionFlipPanel}"
           TargetType="{x:Type control:FlipPanel}"/>

</ResourceDictionary>