<Window x:Class="UITest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:i ="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:laUi ="clr-namespace:LaUI.Control;assembly=LaUI"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        TextOptions.TextFormattingMode="Display" 
        TextOptions.TextRenderingMode="ClearType"
        Title="MainWindow" Height="600" Width="800">
    <TabControl>
        <TabControl.Resources>
            <Style TargetType="Frame">
                <Setter Property="NavigationUIVisibility" Value="Hidden"/>
            </Style>
        </TabControl.Resources>
        <TabItem Header="Accordion">
            <Frame Source="./View/AccordionDemo.xaml" />
        </TabItem>
        <TabItem Header="IconToggleButton">
            <Frame Source="./View/ButtonDemo.xaml"/>
        </TabItem>
    </TabControl>
</Window>
